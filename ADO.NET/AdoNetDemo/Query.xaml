<Window x:Class="AdoNetDemo.Query"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdoNetDemo"
        mc:Ignorable="d"
        Title="Enter a SQL Statement below" Height="400" Width="800" WindowStartupLocation="CenterScreen" Topmost="True" >
    <StackPanel Orientation="Vertical">
        <GroupBox>
            <TextBox Name="fSQL" Height="300" TextWrapping="Wrap" Text="select * from orders"/>
        </GroupBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Name="Ok" Content="Ok" Height="22" FontSize="13" FontFamily="Calibri"  Width="129" Click="ButtonOk_Click" HorizontalAlignment="Center" Margin="0,0,40,0" />
            <Button Name="Cancel" Content="Cancel" Height="22" FontSize="13" FontFamily="Calibri"  Width="129" Click="ButtonCancel_Click" HorizontalAlignment="Center" />
        </StackPanel>
    </StackPanel>
</Window>
